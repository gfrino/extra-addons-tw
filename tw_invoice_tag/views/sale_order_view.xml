<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_tw_invoice_tag" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.tw.invoice.tag</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="tw_category_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
</odoo>
