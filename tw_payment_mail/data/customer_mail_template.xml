<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="customer_invoice_email_template_us_1" model="mail.template">
            <field name="name">Customer Invoice Mail Template US</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_from">{{ user.email or user.company_id.email }}</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="subject">{{user.company_id.name}} Customer Invoice # {{object.name}}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <b><t t-esc="object.partner_id.name or ''"/></b>,<br/><br/>
                        Here is your invoice <b><t t-esc="object.name or ''"/></b> amounting in <b><t t-esc="object.amount_total"/> - <t t-esc="object.currency_id.symbol"/></b> from <b><t t-esc="user.company_id.name"/></b>. Please remit payment at your earliest convenience.<br/><br/>
                        Do not hesitate to contact us if you have any questions.!
                        <br/><br/>
                        Best regards,
                        <br/>
                        Team ticinoWEB
                    </p>
                </div>
            </field>
                    <field name="report_template_ids" eval="[(4, ref('account.account_invoices_without_payment'))]"/>
<!--                    <field name="report_name">Customer Invoice</field>-->
        </record>


    </data>
</odoo>
