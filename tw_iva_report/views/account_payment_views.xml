<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit payment form view -->
    <record id="view_account_payment_form_inherit_vat" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.vat</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <field name="company_currency_id" invisible="1"/>
                <label for="tw_vat_amount"/>
                <div class="o_row">
                    <field name="tw_vat_amount" class="oe_inline"/>
                </div>
                <label for="tw_vat_amount_company"/>
                <div class="o_row">
                    <field name="tw_vat_amount_company" class="oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Inherit payment tree view -->
    <record id="view_account_payment_tree_inherit_vat" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.vat</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_signed']" position="after">
                <field name="tw_vat_amount" widget="monetary" sum="Totale IVA" optional="hide" options="{'currency_field': 'currency_id'}"/>
                <field name="tw_vat_amount_company" widget="monetary" sum="Totale IVA CHF" optional="show" options="{'currency_field': 'company_currency_id'}"/>
                <field name="company_currency_id" column_invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
