<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit payment form view -->
    <record id="view_account_payment_form_inherit_vat" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.vat</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <label for="tw_vat_amount"/>
                <field name="tw_vat_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit payment tree view -->
    <record id="view_account_payment_tree_inherit_vat" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.vat</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_signed']" position="after">
                <field name="tw_vat_amount" widget="monetary" sum="Total VAT" options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
