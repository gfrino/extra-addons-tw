<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View Customization -->
    <record id="view_order_form_invoice_status_editable" model="ir.ui.view">
        <field name="name">Sale Order Form - Editable Invoice Status</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Override the readonly constraint on invoice_status field -->
            <!-- The field is computed but we allow manual override -->
            <xpath expr="//field[@name='invoice_status' and @groups='base.group_no_one']" position="attributes">
                <attribute name="readonly">False</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
