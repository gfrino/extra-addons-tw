<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View: Add invoice_date column with "Data Invio" label -->
    <record id="view_invoice_tree_inherit_tw" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.tw</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="partner_id" string="Cliente" optional="show"/>
                <field name="invoice_date" string="Data Invio" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Form View: Change label to "Data Invio" -->
    <record id="view_move_form_inherit_tw" model="ir.ui.view">
        <field name="name">account.move.form.inherit.tw</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="attributes">
                <attribute name="string">Data Invio</attribute>
            </field>
            <xpath expr="//field[@name='invoice_date_due' and @force_save='1']" position="after">
                <field name="invoice_date_due" readonly="state in ['posted']"/>
            </xpath>
        </field>
    </record>
</odoo>
