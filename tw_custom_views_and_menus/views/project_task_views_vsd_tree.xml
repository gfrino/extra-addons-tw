<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend project.task MAIN tree view -->
    <record id="tw_project_task_tree_vsd_inherit" model="ir.ui.view">
        <field name="name">tw.project.task.tree.vsd.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">

            <xpath expr="//tree" position="inside">
                <field name="vsd_value" sum="Total VSD Value" optional="show" class="text-primary fw-bold"/>
                <field name="task_service_type_id" optional="show"/>
                <field name="vsd_status" optional="show" widget="badge"
                       decoration-warning="vsd_status == 'inprogress'"
                       decoration-success="vsd_status == 'done'"/>
            </xpath>

            <xpath expr="//tree" position="attributes">
                <attribute name="editable">bottom</attribute>
            </xpath>

        </field>
    </record>


    <!-- Extend ALL TASKS list -->
