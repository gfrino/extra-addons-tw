<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend mail.message view to add delete functionality -->
    <record id="view_mail_message_inherit_delete" model="ir.ui.view">
        <field name="name">mail.message.delete.inherit</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.view_message_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="delete">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
