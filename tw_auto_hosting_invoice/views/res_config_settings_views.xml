<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_hosting_inh" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.project.hosting</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50"/>
            <field name="inherit_id" ref="project.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//block[@name='project_time']" position="after">

                    <block title="Categories for Hosting Invoice" name="project_time" groups="tw_vsd_points_system.vsd_value_amount_config">
                        <setting id="vsd_category_ids" help="Select category where auto hosting invoice will be generated!.">
                            <field name="tw_category_ids" widget="many2many_tags"/>
                        </setting>
                    </block>

                </xpath>

            </field>
        </record>

</odoo>
