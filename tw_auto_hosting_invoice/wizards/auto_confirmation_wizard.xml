<odoo>
    
    <record id="view_auto_hosting_inv_wizard" model="ir.ui.view">
        <field name="name">Auto Hosting Invoice</field>
        <field name="model">auto.invoice.confirm.wizard</field>
		<field name="arch" type="xml">
			<form>
				<field name="invoice_id" invisible="True"/>
				<h4>Do you want to create (Hosting Invoice) for next year?</h4>

				<footer>
					<button name="create_duplicate_invoice" type="object" string="Yes" class="oe_highlight" />
                    or
                    <button string="No" class="oe_highlight" special="cancel" />
				</footer>
			</form>
		</field>
	</record>
    
	<record id="action_auto_hosting_invoice_wizard" model="ir.actions.act_window">
		<field name="name">Auto Hosting Invoice</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">auto.invoice.confirm.wizard</field>
		<field name="view_id" ref="view_auto_hosting_inv_wizard" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

</odoo>
